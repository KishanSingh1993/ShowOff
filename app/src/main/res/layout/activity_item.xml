<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <brenda.com.showoff.Util.RoundedImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/user_image"
        android:src="@drawable/entrant_profile_pic"
        android:layout_marginLeft="15dp"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="14sp"
        android:layout_toLeftOf="@id/total_upvotes_ll"
        android:layout_toRightOf="@id/user_image"
        android:textColor="@color/colorBlack"
        android:layout_centerVertical="true"
        android:id="@+id/activity_text"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/total_upvotes_ll"
        >

        <TextView
            android:id="@+id/total_votes_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/colorBlueText"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/total_votes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_upvotes"
            android:textAllCaps="false"
            android:textColor="@color/colorBlueText"
            android:textSize="10sp" />

    </LinearLayout>


</RelativeLayout>